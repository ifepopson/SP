            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Q8. How often do you make this trip? (TICK ONE)?"
            android:textAppearance="?android:attr/textAppearanceMedium" />
            
       <RadioGroup
        android:id="@+id/triptimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp" >

        <RadioButton
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="Daily"
            android:text="Daily" />

        <RadioButton
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 times per week"
            android:tag="2 times per week" />

        <RadioButton
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 times per week" 
            android:tag="3 times per week"/>
        
        
        <RadioButton
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 times a week"
            android:tag="4 times a week" />
        
        <RadioButton
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 times a week"
            android:tag="5 times a week" />
        
        <RadioButton
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiple times daily"
            android:tag="Multiple times daily" />
        
        <RadioButton
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Once a week" 
            android:tag="Once a week"/>
        
        
        <RadioButton
            android:id="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less often" 
            android:tag="Less often"/>
        
    </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
