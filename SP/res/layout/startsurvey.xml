                    android:inputType="time"
                    android:maxLength="2" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
